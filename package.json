{
  "name": "21-byts",
  "productName": "21 BYTS",
  "version": "1.0.0",
  "description": "Téléchargeur audio multiplateforme (Mac/Windows/Linux)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "test:core": "jest tests/unit/core",
    "prepare": "husky install",
    "validate-errors": "node validate-unused-error-codes.js",
    "validate-events": "node validate-unused-events.js",
    "test": "jest",
    "format": "prettier --write .",
    "test:unit": "jest ./tests/unit",
    "test:integration": "jest ./tests/integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "postinstall": "node scripts/install-dependencies.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/user/21-byts.git"
  },
  "keywords": [
    "audio",
    "downloader",
    "streaming",
    "youtube",
    "soundcloud",
    "bandcamp",
    "spotify",
    "tidal",
    "electron",
    "multiplatform"
  ],
  "author": "21 BYTS Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/preset-react": "^7.23.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.5.3"
  },
  "dependencies": {
    "aes-js": "^3.1.2",
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7",
    "fluent-ffmpeg": "^2.1.2",
    "jsdom": "^23.0.1",
    "musicmetadata": "^2.0.5",
    "node-fetch": "^3.3.2",
    "node-id3": "^0.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "optionalDependencies": {
    "linux-file-associations": "^0.1.3",
    "macos-alias": "^1.0.3",
    "winfont": "^1.0.4"
  },
  "build": {
    "appId": "com.21byts.downloader",
    "productName": "21 BYTS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "target": [
        "dmg"
      ],
      "icon": "build/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icons/png",
      "category": "Audio"
    },
    "publish": {
      "provider": "github",
      "owner": "user",
      "repo": "21-byts"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
